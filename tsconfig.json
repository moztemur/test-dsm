{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    // "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules", "dist"]
}
